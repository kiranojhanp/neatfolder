{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    "types": ["bun-types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
